@model PagedList.IPagedList<WebBanHangOnline.Models.EF.Order>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý đơn hàng";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Order" class="nav-link">Đơn hàng</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Home">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Đơn hàng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách đơn hàng</h3>
        </div>
        <div class="card-body" id="myTable">
            <div class="row">
                <div class="col-md-5 pb-4">
                    @using (Html.BeginForm("Index", "Order", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("searchText", null, new { @class = "form-control", @placeholder = "Tìm kiếm đơn hàng..." })
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
                            </span>
                        </div>
                    }
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã đơn hàng</th>
                            <th>Tên khách hàng</th>
                            <th>SĐT</th>
                            <th>Tiền</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th>Tạo bởi</th>
                            <th style="width: 150px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                            foreach (var item in Model)
                            {
                                <tr id="trow_@item.Id">
                                    <td>@i</td>
                                    <td>@item.Code</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.Phone</td>
                                    <td>@string.Format("{0:N0}", item.TotalAmount)<u>đ</u></td>
                                    <td>@(item.TypePayment == 1 ? "Chờ thanh toán" : "Đã thanh toán")</td>
                                    <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    <td>@item.CreatedBy</td>
                                    <td>
                                        <a href="/Admin/Order/View/@item.Id" class="btn btn-sm btn-primary">Xem</a>
                                        <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnCapNhat">Cập nhật</a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">Không có bản ghi nào!</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-center">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchText = ViewBag.SearchText }))
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cập nhật trạng thái đơn hàng</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtOrderId" value="0" />
                <div class="form-group">
                    <label>Trạng thái</label>
                    <select class="form-control" id="ddTrangThai">
                        <option value="2">Đã thanh toán</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btnLuu">Lưu</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).off('click').on('click', '.pagination a', function (e) {
            e.preventDefault();
            if ($(this).parent().hasClass('active')) {
                return;
            }
            var url = $(this).attr('href');
            $.ajax({
                url: url,
                type: 'GET',
                data: { searchText: $('input[name="searchText"]').val() }, // Lấy giá trị từ ô tìm kiếm
                success: function (data) {
                    var tempDiv = $('<div></div>').html(data);
                    var myTableContent = tempDiv.find('#myTable').html();
                    $('#myTable').html(myTableContent);
                },
                error: function () {
                    alert("Lỗi khi tải thông tin.");
                }
            });
        });

        $(document).ready(function () {
            $("body").on("click", ".btnCapNhat", function () {
                var id = $(this).data("id");
                $("#txtOrderId").val(id);
                $("#modal-default").modal("show");
            });

            $("body").on("click", "#btnLuu", function () {
                var id = $("#txtOrderId").val();
                var tt = $("#ddTrangThai").val();
                $.ajax({
                    url: "/Admin/Order/UpdateTT",
                    type: "POST",
                    data: { id: id, trangthai: tt },
                    success: function (result) {
                        if (result.success) {
                            location.reload();
                        }
                    }
                });
            });
        });
    </script>
}