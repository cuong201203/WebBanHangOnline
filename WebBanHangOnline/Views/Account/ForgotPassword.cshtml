@model WebBanHangOnline.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu?";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/whole_web_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/whole_web_responsive.css">

<div class="container product_section_container">
    <div class="row">
        <div class="col">
            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Trang chủ</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>@ViewBag.Title</a></li>
                </ul>
            </div>
        </div>
    </div>    
    <div class="row forgot-password-container">
        <h2 style="text-align: center; width: 100%">@ViewBag.Title</h2>
        <div class="col-md-12">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form", id = "forgotPasswordForm" }))
            {
            @Html.AntiForgeryToken()
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 col-form-label" })
                <div id="fp-validation-summary" style="display: none;" class="col-md-12">
                    <div class="alert alert-danger" role="alert" style="width: fit-content">
                        <ul id="fp-validation-errors" class="text-black"></ul>
                    </div>
                </div>
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "confirmationEmail" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Gửi xác nhận" class="btn red_button text-white btnConfirm" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 d-none success-line">
                    Bạn hãy chờ chút ...
                </div>
            </div>
            }
        </div>
    </div>
</div>
