@section scripts {
    <!-- Custom JS for swipe -->
    <script>
        var carousel = document.getElementById('customCarousel');
        var startX, endX;

        // Handle touch events for swipe on mobile
        carousel.addEventListener('touchstart', function (e) {
            startX = e.touches[0].clientX;
        });

        carousel.addEventListener('touchmove', function (e) {
            endX = e.touches[0].clientX;
        });

        carousel.addEventListener('touchend', function (e) {
            handleSwipe();
        });

        // Handle mouse events for swipe on desktop
        carousel.addEventListener('mousedown', function (e) {
            startX = e.clientX;
        });

        carousel.addEventListener('mousemove', function (e) {
            if (startX) {
                endX = e.clientX;
            }
        });

        carousel.addEventListener('mouseup', function (e) {
            handleSwipe();
            startX = null;
        });

        function handleSwipe() {
            var threshold = 100; // swipe threshold in pixels
            if (startX && endX) {
                if (endX - startX > threshold) {
                    $('#customCarousel').carousel('prev'); // swipe right to go to the previous item
                } else if (startX - endX > threshold) {
                    $('#customCarousel').carousel('next'); // swipe left to go to the next item
                }
            }
        }
        $(document).ready(function () {
            // Lưu src gốc của ảnh
            var originalSrc = $('#best_seller_img').attr('src');

            // Thay đổi src khi hover vào ảnh
            $('#best_seller_img').hover(
                function () {
                    // Khi hover vào ảnh
                    $(this).stop(true, true).fadeOut(200, function () {
                        $(this).attr('src', '/Uploads/images/BestSeller/best-seller-1.jpg').fadeIn(200);
                    });
                },
                function () {
                    // Khi rời khỏi ảnh
                    $(this).stop(true, true).fadeOut(200, function () {
                        $(this).attr('src', originalSrc).fadeIn(200);
                    });
                }
            );
        });
    </script>
}