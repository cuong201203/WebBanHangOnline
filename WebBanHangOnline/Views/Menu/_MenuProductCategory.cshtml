@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
    <div class="banner">
        <div class="container">
            <div class="row">
                @{
                    int columnSize = 12 / Model.Count();
                    if(columnSize < 1)
                    {
                        columnSize = 1;
                    }
                }
                @foreach (var item in Model)
                {
                <div class="col-md-@columnSize">
                    <div class="banner_item align-items-center" style="background-image:url(@item.Icon); height: 200px">
                        <div class="banner_category" style="height: fit-content;">
                            <a href="/danh-muc-san-pham/@item.Alias-@(item.Id)" style="font-size: 16px;">@item.Title</a>
                        </div>
                    </div>
                </div>
                }
                @*<div class="col-md-4">
                    <div class="banner_item align-items-center" style="background-image: url(/Content/assets/images/banner_2.jpg) ">
                        <div class="banner_category">
